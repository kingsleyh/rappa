require 'jeweler'

Jeweler::Tasks.new do |gem|

  gem.name        = 'rappa'
  gem.homepage    = 'https://github.com/masterthought/rappa'
  gem.license     = 'Apache 2.0'
  gem.email       = 'kingsley@masterthought.net'
  gem.authors     = ['Kingsley Hendrickse']

  gem.summary     = %Q{Ruby Application Package Personal Assistant}
  gem.description = <<-EOF
Easy and simple way to package up your rack based application into a .rap (Ruby Application Package) for deployment to a web container that supports .rap such as ThunderCat.
EOF

  gem.executables = ['/rappa']
  gem.files = Dir.glob('src/**/*')
end
Jeweler::RubygemsDotOrgTasks.new